<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:strokeWidth="1dp"
        android:elevation="5dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/equilibrationRowDebterPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/equilibrationRowTextDebter"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/equilibrationRowArrow"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24" />

    <TextView
        android:id="@+id/equilibrationRowTextReceiver"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/black" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/black"
        android:text=" : "/>

    <TextView
        android:id="@+id/equilibrationRowDebt"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/black" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:strokeWidth="1dp"
        android:elevation="5dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/equilibrationRowReceiverPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>